<Page x:Class="DeepGamingSocial.comment"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:DeepGamingSocial"
      mc:Ignorable="d" 
      d:DesignHeight="300" d:DesignWidth="1182"
      Title="comment"
      Background="DarkGray">

    <Grid>
        <TextBox x:Name="postcmt"
                 Height="30" Margin="0,270,100,0"
                 Width="1082"/>
        <Button x:Name="post"
                Height="30"
                Width="100" Margin="1082,270,0,0"
                Content="Post"
                FontSize="20"
                FontWeight="Bold"
                Click="post_Click"/>
        <ScrollViewer Height="270" Margin="0,0,0,30">
            <StackPanel x:Name="commentbox" Height="400"/>
        </ScrollViewer>
        <Button Height="30"
                Width="30"
                Content="X"
                FontSize="20"
                FontWeight="Bold" Margin="1117,0,35,270"
                Click="Button_Click"/>
    </Grid>
</Page>
