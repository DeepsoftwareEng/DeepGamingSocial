                   FontSize="30"
                   FontWeight="Bold"
                   Height="150"
                   Foreground="Aqua" 
                   Visibility="Visible"
                   Opacity="0" Margin="19,318,930,432" >
            <TextBlock.Background>
                <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0" Opacity="0.7">
                    <GradientStop Color="Black"/>
                    <GradientStop Color="DarkGray" Offset="1"/>
                </LinearGradientBrush>
            </TextBlock.Background>
        </TextBlock>
